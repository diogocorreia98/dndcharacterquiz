    "q_subclass_choice": {
      "type": "question",
      "section": "class",
      "question": "Qual destas subclasses chama mais por ti?",
      "options_source": {
        "type": "inline",
        "dataset": "subclasses",
        "label_field": "pt",
        "value_field": "code",
        "filters": [
          {
            "field": "class",
            "var": "class",
            "op": "eq",
            "optional": false
          },
          {
            "field": "group",
            "var": "subclass_group",
            "op": "eq",
            "optional": false
          }
        ]
      },
      "skip_if_no_options": {
        "next": null
      },
      "autoselect_if_single": {
        "dataset": "subclasses",
        "filters": [
          {
            "field": "class",
            "var": "class",
            "op": "eq",
            "optional": false
          },
          {
            "field": "group",
            "var": "subclass_group",
            "op": "eq",
            "optional": false
          }
        ],
        "value_field": "code",
        "set": [
          {
            "var": "subclass",
            "op": "set",
            "value_from_result": true
          }
        ]
      },
      "on_select": [
        {
          "var": "subclass",
          "op": "set",
          "value_from_option": true
        }
      ]
